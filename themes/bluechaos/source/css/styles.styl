body
html
  display: flex
  font-size: 16px
  -moz-osx-font-smoothing: grayscale
  -webkit-font-smoothing: antialiased
  font-family: "Roboto", "Helvetica Neue", Helvetica, Arial, sans-serif
  height: 100%
  width: 100%
  margin: 0
  overflow: hidden
  z-index: -2
  
a
  font-size: 20px
  text-decoration: none
  color: #ddd

a:visited
  color: #ddd

a:hover
  color: white

ul
  list-style-type: none
  padding: 0
  text-align: center
  width: 100%
  z-index: 1
  li
    margin-bottom: 10px

nav
  background-color: #333
  color: white
  display: flex
  flex-direction: column
  align-items: center
  height: 100%
  padding: 15px 10px 15px 10px
  width: 35%

section
  display: flex
  flex-direction: column
  overflow: auto
  width: 100%
  height: 100%
  overflow-x: hidden

article
  background-color: #eee
  color: #666
  height: 100%
  padding: 30px
  width: 100%
  z-index: 1
  a:visited
    color: black

.avatar
  border-radius: 100px
  z-index: 1
  -webkit-filter: sepia(100%)
  
.my-name
  margin-bottom: 0
  font-weight: 100
  z-index: 1

.title
  z-index: 1

hr
  border: 0
  border-top 1px solid #aaa
  width: 100%
  
video
  position: absolute
  top: 0
  left: 0
  // AUTOPREFIXER!!!
  height: 100%
  -webkit-filter: grayscale(100%) blur(3px) sepia(100%)
  z-index: 0
  