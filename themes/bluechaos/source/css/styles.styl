body
html
  display: flex
  font-size: 100%
  -moz-osx-font-smoothing: grayscale
  -webkit-font-smoothing: antialiased
  font-family: "Roboto", "Helvetica Neue", Helvetica, Arial, sans-serif
  height: 100%
  width: 100%
  margin: 0
  padding: 0
  overflow: hidden
  vertical-align: baseline;
  z-index: -2
  // line-height: 1;
small
  font-size: 0.85rem
  
p
  font-size: 1.25rem

for num in (1..3)
  h{num}
    font-size: (2.5 - .5 * num)rem
    text-align: center

h1
  margin-top: 0

a
  text-decoration: none

nav
  @media screen and (max-width: 640px)
    display: none
  color: white
  display: flex
  flex-direction: column
  align-items: center
  height: 100%
  padding: 35px 10px 15px 10px
  width: 30%
  a
    font-size: 1.25rem
    // font-family: "Source Code Pro"
    color: #ddd
  a:visited
    color: #ddd
  a:hover
    color: white
  ul
    font-weight: 400
    list-style-type: none
    padding: 0
    text-align: center
    width: 100%
    z-index: 1
    li
      margin-bottom: 10px
      
section
  background-color: #eee
  display: flex
  flex-direction: column
  overflow: auto
  width: 100%
  height: 100%
  overflow-x: hidden
  z-index: 1
  padding: 25px    
  hr
    border: 0
    border-top 1px solid #39342B
    width: 30%

article
  color: #666
  padding: 30px 0 30px
  width: 100%
  a:visited
    color: #666

.avatar
  border-radius: 100px
  z-index: 1
  -webkit-filter: grayscale(100%) sepia(30%)
  
.my-name
  color: #dedede
  font-family: "Open Sans", sans-serif
  margin-bottom: 0
  font-weight: 100
  z-index: 1

.title
  z-index: 1

video
  position: absolute
  border: 0
  padding: 0
  margin: 0
  top: 0
  left: 0
  height: 100%
  filter: grayscale(100%) sepia(100%) contrast(.9)
  z-index: -1000
  
.recent
  text-align: center
  color: #542F00
  
.article-header
  h2
    text-align: center
    margin-top: 0
    a
      color: #3E2601
      &:hover
        color: #774800
  
.article-photo
  a
    img
      display: block
      margin-left: auto
      margin-right: auto
      width: 90%  
      
// .article-title
//   margin: 0 10px 0 10px

.article-entry
  blockquote
    font-family: font-serif
    font-size: 1.4em
    margin: 0
    text-align: center
    footer
      font-size: font-size
      margin: line-height 0
      font-family: font-sans
      cite
        &:before
          content: "â€”"
          padding: 0 0.5em
    p
      border-left: 3px solid #774800
      font-style: italic;
      padding: .66001rem 1rem 1rem;
  img
    display: block
    margin-left: auto
    margin-right: auto
    width: 100%
    
.article-brief
  h1
    margin-bottom: 10px
    width: 90%
    text-align: left
    margin-left: auto
    margin-right: auto
